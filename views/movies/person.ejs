<body>
  <% include ./partials/navbar %>
    <h3 class="border-bottom pb-3"><%= data.name %>
    <% if(data.birthday) { %>
      (<%= new Date(data.birthday).getFullYear() %>
      -
      <% if(data.deathday) { %><%= new Date(data.deathday).getFullYear() %><% } %>)
    <% } %>
    </h3>
    <div class="row">
      <div class="col">
        <div class="w-100">
          <div class="rounded w-100">
            <% if(data.images.profiles.length > 0) { %>
              <%# Sort array by vote_average %>
                <%
                  data.images.profiles.sort((a, b) => {
                    return parseFloat(b.vote_average) - parseFloat(a.vote_average);
                  });
                %>
                  <img class="w-100 rounded" src="https://image.tmdb.org/t/p/w600_and_h900_bestv2<%= data.images.profiles[0].file_path %>" alt="">
                  <% } else { %>
                    <img class="w-100 rounded" src="https://image.tmdb.org/t/p/w600_and_h900_bestv2<%= data.poster_path %>" alt="">
                    <% } %>
          </div>
          <div>
            <%
              function calculate_age(startDate, deathDate) {
                if(deathDate){
                  endDate = new Date(deathDate);
                } else {
                  endDate = new Date();
                }
                let diff_ms = endDate.getTime() - startDate.getTime();
                let age_dt = new Date(diff_ms);
                return Math.abs(age_dt.getUTCFullYear() - 1970);
              } 
            %>
              <% let dateOptions = { year: 'numeric', month: 'long', day: 'numeric' }; %>
                <% if(data.deathday) { %>
                  <p><strong>Born:</strong><br>
                    <%= new Date(data.birthday).toLocaleDateString("en-US", dateOptions) %>
                      <% if(data.place_of_birth) { %> in
                        <%= data.place_of_birth %>
                      <% } %>
                  </p>
                  <p><strong>Died:</strong><br>
                    <%= new Date(data.deathday).toLocaleDateString("en-US", dateOptions) %>(age
                      <%= calculate_age(new Date(data.birthday), new Date(data.deathday)) %>)</p>
                  <% } else { %>
                    <p><strong>Born:</strong><br>
                      <%= new Date(data.birthday).toLocaleDateString("en-US", dateOptions) %>(age
                        <%= calculate_age(new Date(data.birthday)) %>)
                          <% if(data.place_of_birth) { %> in
                            <%= data.place_of_birth %>
                          <% } %>
                    </p>
                    <% } %>
          </div>
        </div>
      </div>
      <div class="col">
        <p><strong>About:</strong><br>
          <%- data.biography %>
        </p>

        <div class="links">
          <a href="https://www.imdb.com/name/<%= data.imdb_id %>">
              <img src="/IMDB_Logo_2016.svg">
            </a>
          <!-- IMDB id -->
          <a href="https://www.themoviedb.org/person/<%= data.id %>">
              <img src="/primary-green.svg">
            </a>
          <!-- The Movie DB id -->
          <a href="https://hdbits.org/film/person?id=<%= parseInt(data.imdb_id.slice(2)) %>">
              <img src="/HDBits_logo_small.png">
            </a>
          <!-- IMDB id -->
          <a href="https://www.google.se/search?q=<%= data.name %>">
              <img src="/Google_2015_logo.svg">
            </a>
          <!-- Movie title -->
        </div>
      </div>
      <div class="col">
        <ul class="list-group">
          <li class="list-group-item">
            <strong>Known For</strong>
          </li>
          <% for (let i = 0; i < data.credits.cast.length; i++) { %>
            <% if(i >= 5) { break; } %>
              <li class="list-group-item">
                <a href="/movies/movie/<%= data.credits.cast[i].id %>" class="profile-image-container">
                  <% if (data.credits.cast[i].poster_path) { %>
                    <img class="profile-photo rounded-5" src="https://image.tmdb.org/t/p/original<%= data.credits.cast[i].poster_path %>" alt="">
                    <% } else { %>
                      <img class="profile-photo rounded-5" src="/unknown.png" alt="">
                      <!-- -->
                      <% } %>
                </a>
                <div class="profile-name-container">
                  <span class="profile-name-text">
                  <strong><%= data.credits.cast[i].title %></strong>
                  <br>
                  <small>as<br><%= data.credits.cast[i].character %></small>
                </span>
                </div>
              </li>
              <% } %>
        </ul>
      </div>
      <!-- <div class="col"></div> -->
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
